<main>
  <%= render "list" %>

  <% if @user.id == current_user.id %>
    <!--マイページ-->
    <% if I18n.locale.to_s == "ja" %>
      <%= render "public/users/ja/mypage", user: @user %>
    <% else %>
      <%= render "public/users/en/mypage", user: @user %>
    <% end %>
  <% else %>
    <!--他ユーザーの詳細画面-->
    <% if I18n.locale.to_s == "ja" %>
      <%= render "public/users/ja/other_user", user: @user %>
    <% else %>
      <%= render "public/users/en/other_user", user: @user %>
    <% end %>
  <% end %>
</main>