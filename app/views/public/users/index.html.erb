<main>

  <%= render "list" %>

  <div class="user-index">
    <div class="user-index-text">
      <strong class="user-count"><%= @users.count %>人</strong> のユーザーが見つかりました
    </div>
    <div class="user-index-list">
      <% @users.each do |user| %>
        <div class="user-index-card">
          <div class="user-index-img">
            <%= image_tag user.get_profile_image(100,100) %>
          </div>
          <div class="user-index-name">
            <%= link_to user_path(user.id), class:"user-index-namecustom" do %>
              <%= user.name %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</main>