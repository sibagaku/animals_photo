<h2 class="login-title">New Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
    <strong><%= f.label :Nickname： %></strong><br />
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="field">
    <strong><%= f.label :Email_Address： %></strong><br />
    <%= f.email_field :email, class:"form-control" %>
  </div>
  <div class="field">
    <strong><%= f.label :"Password（more than 6 characters）：" %></strong>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>
  <div class="field">
    <strong><%= f.label :Password（confirmation）： %></strong><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success btn-custom" %>
  </div>
<% end %>

<p class="text-center mt-4">
  If you are already registered,<%= link_to "please login here", new_user_session_path  %>.
</p>