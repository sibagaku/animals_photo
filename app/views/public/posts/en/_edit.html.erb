<% if @post.errors.any? %>
  <div class="error-text mt-4">
    <%= @post.errors.count %>errors occurred
  </div>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <div class="error-text">
        <li><%= message %></li>
      </div>
    <% end %>
  </ul>
<% end %>

<h2 class="title"><strong>Editing Submissions</strong></h2>

<!--投稿編集　ここから-->
<%= form_with model: @post, url: post_path, method: :patch do |f| %>
  <div class="field">
    <strong><%= f.label :"Photos to be submitted：" %></strong>
    <%= f.label :image, class: "image_input_btn" do %>
      <i class="fa-solid fa-plus"></i>
      <%= f.file_field :image, accept: "image/*", class: "image_input_form" %>
    <% end %>
  </div>
  <div class="form-image", id="new-image"></div>
  <div class="field">
    <strong><%= f.label :"explanatory note：" %></strong><br>
    <%= f.text_area :introduction, class:"form-control", rows:"4" %>
  </div>
  <div class="actions">
    <%= f.submit"Save changes", class:"btn btn-success btn-custom" %>
  </div>
<% end %>
<!--投稿編集　ここまで-->

<!--投稿削除　ここから-->
<div class="post-delete">
  <%= link_to "Delete a post", post_path(@post.id), method: :delete, class:"btn btn-danger btn-shadow", data: {confirm: "Do you want to delete your post?"} %>
</div>
<!--投稿削除　ここまで-->