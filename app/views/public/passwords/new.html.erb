<%= render "public/homes/header" %>

<h2>パスワードをお忘れの方</h2>

<div>
  <%= form_with model: @user, url: user_password_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :"メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワード再設定メールを送る", class:"btn btn-success" %>
    </div>
  <% end %>


</div>
