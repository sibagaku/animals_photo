<h2>パスワードの再設定</h2>

<div>
<%= form_with model: @user, url: user_password_path, method: :patch, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上に設定してください)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードの変更", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>
